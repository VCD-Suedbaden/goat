{
  "name": "GOAT",
  "dockerComposeFile": ["../docker-compose.yml","docker-compose.extend.yml"],
  "workspaceFolder": "/app",
  "shutdownAction": "stopCompose",
  "service": "goat-dev",
  "forwardPorts": [3000, 3010, 6006, 8081, 8082, 8083, 5433, 15672],
  "portsAttributes": {
    "3000": { "label": "GOAT Web" },
    "3010": { "label": "Documentation" },
    "6006": { "label": "Storybook" },
    "8081": { "label": "Core API" },
    "8082": { "label": "GeoAPI" },
    "8083": { "label": "Routing API" },
    "5433": { "label": "PostgreSQL" },
    "15672": { "label": "RabbitMQ Management" }
  },
  "customizations": {
    "vscode": {
        "extensions": [
          "ban.spellright", // Spell check for docs
          "DavidAnson.vscode-markdownlint", // markdown linting
          "dbaeumer.vscode-eslint", // eslint plugin
          "esbenp.prettier-vscode", // prettier plugin
          "yzhang.markdown-all-in-one", // nicer markdown support
          "lokalise.i18n-ally", // i18n plugin
          // Python
          "ms-python.mypy-type-checker", // mypy type checker
          "ms-python.python", // python plugin
          "ms-python.debugpy", // python debugger
          "ms-python.vscode-pylance", // pylance plugin
          "charliermarsh.ruff", // ruff plugin
          "tamasfe.even-better-toml", // TOML plugin
          // Utilities
          "github.copilot", // GitHub Copilot
          "github.copilot-chat", // GitHub Copilot Chat
          "ms-vscode.vscode-copilot-vision", // GitHub Copilot Vision
          "ms-vscode.vscode-copilot-data-analysis", // GitHub Copilot Data Analysis
          "gruntfuggly.todo-tree", // todo tree
          "aaron-bond.better-comments" // better comments
        ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  }
}
